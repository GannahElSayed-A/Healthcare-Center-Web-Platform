@page
@model GUI.Pages.MyaccountModel
@{
    ViewData["Title"] = "MyAccount";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            background-color: #005f73;
            color: #ffffff;
            line-height: 1.6;
        }

        .header {
            padding: 20px;
            text-align: center;
            background-color: #004049;
            color: white;
            font-size: 1.5em;
        }

        .container {
            padding: 20px;
        }

        .profile {
            text-align: right;
            margin-bottom: 20px;
            font-size: 1.2em;
        }

        .card {
            background-color: white;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            position: relative;
        }

            .card h3 {
                margin-bottom: 15px;
                color: #005f73;
            }

        .row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            padding: 10px 0;
            position: relative;
            background-color: transparent;
        }

            .row div {
                flex: 1;
                text-align: center;
                padding: 15px;
                margin: 0 5px;
                border-radius: 10px;
                color: #005f73;
                font-weight: bold;
                background-color: lightcyan;
                position: relative;
                z-index: 1;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
                transition: transform 0.3s ease, box-shadow 0.3s ease;
            }

                .row div:hover {
                    transform: scale(1.05);
                    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
                }

            .row::before {
                content: '';
                position: absolute;
                top: 0;
                left: -10px;
                right: -10px;
                bottom: 0;
                background-color: white;
                z-index: 0;
                border-radius: 12px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }


        .logout-btn {
            display: inline-block;
            text-align: center;
            text-decoration: none;
            color: white;
            background-color: transparent;
            padding: 12px 24px;
            border: 2px solid #D9F6F3;
            border-radius: 10px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 40px;
            width: 200px;
        }

            .logout-btn:hover {
                background-color: #ff595e;
                color: white;
                border-color: #ff595e;
            }
    </style>
</head>

<body>
    <div class="header">
        <h1>Hello, <span style="font-weight: bold;">@Model.Name</span></h1>
    </div>

    @if (Model.UserType=="Doctor")
    {
        <!-- Doctor -->
        <div class="container">
            <h2 style="text-align: center; margin-bottom: 20px;">Patients Assigned</h2>
            <div class="card">
                <table class="table" style="width: 100%; border-collapse: collapse; margin-top: 20px;">
                    <thead style="background-color: #004049; color: #fff;">
                        <tr>
                            <th style="padding: 10px; text-align: left;">Patient Username</th>
                            <th style="padding: 10px; text-align: left;">Session Date</th>
                            <th style="padding: 10px; text-align: left;">Place</th>
                            <th style="padding: 10px; text-align: left;">Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.DoctorPatients != null && Model.DoctorPatients.Count > 0)
                        {
                            foreach (var setsession in Model.DoctorPatients)
                            {
                                <tr style="background-color: #f9f9f9; border-bottom: 1px solid #ddd;">
                                    <td style="padding: 10px;">@setsession.</td>
                                    <td style="padding: 10px;">@setsession.SessionDateTime.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td style="padding: 10px;">@setsession.Place</td>
                                    <td style="padding: 10px;">@setsession.Price</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" style="padding: 10px; text-align: center; color: #ff595e;">No patients assigned.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <!--Patient -->
        <div class="container">
            <!-- Profile Section -->
            <div class="profile" style="margin-bottom: 30px;">
                <h2 style="margin-bottom: 20px;">Profile</h2>
                <p><strong>Name:</strong> @Model.Name</p>
                <p><strong>Nationality:</strong> @Model.Nationality</p>
            </div>

            <!-- History Section -->
            <div class="card">
                <h3>History</h3>
                @foreach (var history in Model.History)
                {
                    <div class="row">
                        <div>No: @history.No</div>
                        <div>Type: @history.Type</div>
                        <div>@history.Issue</div>
                    </div>
                }
            </div>

            <!-- Physical Problems Section -->
            <div class="card">
                <h3>Physical Problems</h3>
                @if (Model.PhysicalProblems != null && Model.PhysicalProblems.Count > 0)
                {
                    @foreach (var Physical in Model.PhysicalProblems)
                    {
                        <div class="row">
                            <div>No: @Physical.No</div>
                            <div>Problem: @Physical.ProblemDescription</div>
                            <div>Start Date: @Physical.StartDate</div>
                        </div>
                    }
                }
                else
                {
                    <p>No physical problems.</p>
                }
            </div>

            <!-- Behavior Problems Section -->
            <div class="card">
                <h3>Behavior Problems</h3>
                @if (Model.BehaviorProblems != null && Model.BehaviorProblems.Count > 0)
                {
                    @foreach (var behavior in Model.BehaviorProblems)
                    {
                        <div class="row">
                            <div>No: @behavior.No</div>
                            <div>Problem: @behavior.ProblemDescription</div>
                            <div>Start Date: @behavior.StartDate.ToShortDateString()</div>
                        </div>
                    }
                }
                else
                {
                    <p>No behavior problems.</p>
                }
            </div>
        </div>
    }

    <!-- Logout Button -->
    <div style="text-align: center; margin-top: 60px;">
        <form method="post">
            <button type="submit" class="logout-btn" asp-page-handler="Logout">Log Out</button>
        </form>
    </div>
    @if (TempData["Message"] != null)
    {
        <p style="color: green;">@TempData["Message"]</p>
    }

</body>

</html>