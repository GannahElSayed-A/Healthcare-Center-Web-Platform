                                </li>

                            </ul>
                            <div class="tab-content" id="customTabContent">
                                @* Sunday tab*@
                                <div class="tab-pane fade show active" id="oneA" role="tabpanel" aria-labelledby="tab-oneA">

                                    <!-- Row starts -->
                                    <div class="row gx-4 justify-content-center">

                                        @for (int i = 0; i < Model.SUN; i++)
                                        {

                                            <div class="col-sm-3 col-12">

                                                <div class=" card-body p-3 rounded-2 border rounded-2 ">

                                                    <h6 class="card-title text-center" style="color:black; font-size: 16px;  font-weight: 400; word-wrap: break-word">SessionType</h6>
                                                    <ul class="list-group border border-dark">
                                                        <li class="list-group-item d-flex justify-content-between align-items-center border border-dark">
                                                            @Model.Sessions.Rows[i][4] @Model.Sessions.Rows[i][5]

                                                        </li>
                                                        <li class="list-group-item d-flex justify-content-between align-items-center border border-dark">
                                                            @Model.Sessions.Rows[i][1]:00

                                                        </li>
                                                        <li class="list-group-item d-flex justify-content-between align-items-center border border-dark">
                                                            @Model.Sessions.Rows[i][6]

                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>

                                        }

                                    </div>
                                    <!-- Row ends -->
                                </div>
                                @* Monday tab*@
                                <div class="tab-pane fade" id="twoA" role="tabpanel" aria-labelledby="tab-twoA">
                                    <!-- Row starts -->
                                    <div class="row gx-4 justify-content-center">

                                        @for (int i = 0; i < Model.MON; i++)
                                        {

                                            <div class="col-sm-3 col-12">

                                                <div class=" card-body p-3 rounded-2 border rounded-2 ">

                                                    <h6 class="card-title text-center" style="color:black; font-size: 16px;  font-weight: 400; word-wrap: break-word">SessionType</h6>
                                                    <ul class="list-group border border-dark">
                                                        <li class="list-group-item d-flex justify-content-between align-items-center border border-dark">
                                                            @Model.Sessions.Rows[i][4] @Model.Sessions.Rows[i][5]

                                                        </li>
                                                        <li class="list-group-item d-flex justify-content-between align-items-center border border-dark">
                                                            @Model.Sessions.Rows[i][1]:00

                                                        </li>
                                                        <li class="list-group-item d-flex justify-content-between align-items-center border border-dark">
                                                            @Model.Sessions.Rows[i][6]

                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>

                                        }

                                    </div>
                                    <!-- Row ends -->
                                </div>
                                @* Tueday tab*@
                                <div class="tab-pane fade" id="threeA" role="tabpanel" aria-labelledby="tab-threeA">
                                    <!-- Row starts -->
                                    <div class="row gx-4 justify-content-center">

                                        @for (int i = 0; i < Model.TUE; i++)
                                        {

                                            <div class="col-sm-3 col-12">

                                                <div class=" card-body p-3 rounded-2 border rounded-2 ">

                                                    <h6 class="card-title text-center" style="color:black; font-size: 16px;  font-weight: 400; word-wrap: break-word">SessionType</h6>
                                                    <ul class="list-group border border-dark">
                                                        <li class="list-group-item d-flex justify-content-between align-items-center border border-dark">
